{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution":"node",
    "esModuleInterop": true, 
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true
  }
}
